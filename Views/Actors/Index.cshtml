@*Define the model/s that you're working with*@
@model IEnumerable<Actor>

@*Define the ViewData, Which should display the data*@
@{
    ViewData["Title"] = "Actors";
}

@*Actual code that would be shown*@
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th class="align-center">@Html.DisplayNameFor(model => model.ProfileImagePath)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-self-center">
                            <img src="@item.ProfileImagePath" alt="@item.FullName" style="max-width: 150px;" />
                        </td>
                        <td class="align-middle">
                            <h4 class="text-dark">@item.FullName</h4>
                            @Html.DisplayFor(ModelItem => item.FullName)
                        </td>
                        <td class="align-middle">
                            <h4 class="text-dark">@item.Bio</h4>
                            @Html.DisplayFor(ModelItem => item.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Edit </a> ||
                            <a class="btn btn-outline-success"><i class="bi bi-eye"></i> View </a> ||
                            <a class="btn btn-outline-danger"><i class="bi bi-trash"></i> Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>